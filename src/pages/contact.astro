---
export const prerender = true;

import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation';
import Footer from '../components/Footer';
---

<Layout title="Contact - ATLAS">
  <Navigation client:load />
  
  <!-- Hero Section -->
  <section class="pt-32 pb-16 md:pt-40 md:pb-24">
    <div class="container mx-auto max-w-5xl px-6 md:px-12">
      <div class="opacity-0 animate-fadeIn">
        <h1 class="text-5xl md:text-6xl lg:text-7xl font-serif font-light mb-8 text-atlas-dark">
          Contact
        </h1>
        <p class="text-lg md:text-xl text-atlas-dark/70 font-light max-w-3xl">
          Engagements begin with a conversation.
        </p>
      </div>
    </div>
  </section>

  <!-- Form and Contact Info Grid -->
  <section class="py-14 md:py-2">
    <div class="container mx-auto max-w-6xl px-6 md:px-12">
      <div class="grid md:grid-cols-2 gap-12 md:gap-16 lg:gap-20">
        <!-- Form Section - LEFT COLUMN -->
        <div class="border-b md:border-b-0 md:border-r border-atlas-dark/10 md:pr-12 lg:pr-20 pb-12 md:pb-0">
          <h2 class="text-2xl md:text-3xl font-serif font-light mb-8 text-atlas-dark">
            PRIVATE INQUIRY
          </h2>

          <form id="contactForm" class="space-y-8">
            <!-- Name Field -->
            <div>
              <label for="name" class="block text-xs tracking-wider uppercase text-atlas-dark/30 mb-3">
                NAME
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-0 py-3 bg-transparent border-b border-atlas-dark/20 focus:border-atlas-dark outline-none text-atlas-dark transition-colors duration-300"
              />
            </div>

            <!-- Email Field -->
            <div>
              <label for="email" class="block text-xs tracking-wider uppercase text-atlas-dark/30 mb-3">
                EMAIL
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-0 py-3 bg-transparent border-b border-atlas-dark/20 focus:border-atlas-dark outline-none text-atlas-dark transition-colors duration-300"
              />
            </div>

            <!-- Brief Message Field -->
            <div>
              <label for="message" class="block text-xs tracking-wider uppercase text-atlas-dark/30 mb-3">
                BRIEF MESSAGE
              </label>
              <textarea
                id="message"
                name="message"
                required
                rows="6"
                class="w-full px-0 py-3 bg-transparent border-b border-atlas-dark/20 focus:border-atlas-dark outline-none text-atlas-dark resize-none transition-colors duration-300"
              ></textarea>
            </div>

            <button
              type="submit"
              class="inline-flex items-center gap-3 border border-atlas-dark px-10 py-4 text-x tracking-[0.2em] uppercase transition-all duration-300 hover:bg-atlas-dark hover:text-atlas-primary group"
            >
              SUBMIT INQUIRY
              <span class="group-hover:translate-x-1 transition-transform duration-300">â†’</span>
            </button>
          </form>
          <br />
        </div>

        <!-- Contact Info Section - RIGHT COLUMN -->
        <div>
          <h2 class="text-2xl md:text-3xl font-serif font-light mb-8 text-atlas-dark">
            DIRECT CONTACT
          </h2>

          <div class="space-y-10">
            <!-- Email -->
            <div>
              <p class="text-xs tracking-wider uppercase text-atlas-dark/30 mb-4">
                EMAIL
              </p>
              <a
                href="mailto:contact@atlaswealth.com"
                class="text-base text-atlas-dark hover:text-atlas-gold transition-colors duration-300"
              >
                contact@atlaswealth.com
              </a>
            </div>

            <!-- Location -->
            <div>
              <p class="text-xs tracking-wider uppercase text-atlas-dark/30 mb-4">
                LOCATION
              </p>
              <p class="text-base text-atlas-dark">
                Miami
              </p>
            </div>

            <!-- Additional Info -->
            <div class="pt-8 border-t border-atlas-dark/10 space-y-6 text-lg leading-relaxed text-atlas-dark/60">
              <p>
                All inquiries are reviewed personally and handled with complete discretion. We respond to serious inquiries within a reasonable timeframe.
              </p>
              <p>
                Please note that ATLAS works with a limited number of families. Not all inquiries will result in an engagement, but all will receive a thoughtful response.
              </p>
              <p><br /></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Closing Statement -->
  <section class="py-24 md:py-40 bg-[#0a1624]">
    <div class="container mx-auto max-w-3xl px-6 md:px-12">
      <div class="text-center">
        <p class="text-2xl md:text-2xl font-serif font-light text-atlas-primary mb-3">
          We do not seek volume. We seek alignment.
        </p>
      </div>
    </div>
  </section>

  <Footer client:load />
</Layout>

<script>
  // Form submission handler
  const form = document.getElementById('contactForm');
  
  if (form) {
    form.addEventListener('submit', (e) => {
      e.preventDefault();
      
      const formData = new FormData(form as HTMLFormElement);
      const data = {
        name: formData.get('name'),
        email: formData.get('email'),
        message: formData.get('message')
      };
      
      console.log('Form submitted:', data);
      
      // Show success message
      alert('Thank you for your inquiry. We will be in touch soon.');
      
      // Reset form
      (form as HTMLFormElement).reset();
    });
  }
</script>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fadeIn {
    animation: fadeIn 0.8s ease-out forwards;
  }
</style>
